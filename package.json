{
  "name": "root",
  "version": "1.0.0",
  "sideEffects": false,
  "workspaces": {
    "packages": [
      "plugins/*"
    ]
  },
  "scripts": {
    "start": "yarn workspace @tduniec/plugin-template-designer start",
    "build": "yarn workspaces foreach -At run build",
    "test": "yarn workspaces foreach -At run test",
    "clean": "yarn workspaces foreach -At run clean",
    "lint": "yarn workspaces foreach -At run lint",
    "tsc": "yarn workspaces foreach -At run tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "lint:all": "backstage-cli repo lint",
    "prettier": "yarn workspaces foreach -At run prettier:check",
    "prettier:fix": "yarn workspaces foreach -At run prettier:fix",
    "prettier:check": "yarn workspaces foreach -At run prettier:check",
    "prepack": "backstage-cli package prepack",
    "postpack": "backstage-cli package postpack",
    "validate": "yarn workspaces foreach -At run tsc && backstage-cli package lint && prettier --check .",
    "validate:fix": "yarn tsc && yarn lint && yarn prettier:fix",
    "validate:full": "tsc --skipLibCheck false --incremental false && backstage-cli repo lint && prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "backstage-cli package lint",
    "*.{json,md}": "prettier --write"
  },
  "dependencies": {
    "@backstage/core-compat-api": "backstage:^",
    "@backstage/core-components": "backstage:^",
    "@backstage/core-plugin-api": "backstage:^",
    "@backstage/frontend-plugin-api": "backstage:^",
    "@backstage/plugin-catalog-react": "backstage:^",
    "@backstage/plugin-scaffolder-common": "backstage:^",
    "@backstage/plugin-scaffolder-react": "backstage:^",
    "@backstage/theme": "backstage:^",
    "@codemirror/lang-yaml": "^6.1.2",
    "@material-ui/core": "^4.12.4",
    "@material-ui/icons": "^4.11.3",
    "@material-ui/lab": "^4.0.0-alpha.61",
    "@xyflow/react": "^12.8.6",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@backstage/catalog-client": "backstage:^",
    "@backstage/catalog-model": "backstage:^",
    "@backstage/cli": "backstage:^",
    "@backstage/core-app-api": "backstage:^",
    "@backstage/dev-utils": "backstage:^",
    "@backstage/plugin-catalog-common": "backstage:^",
    "@backstage/test-utils": "backstage:^",
    "@codemirror/lang-yaml": "6.1.2",
    "@codemirror/state": "6.5.2",
    "@codemirror/view": "6.26.3",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.1",
    "@semantic-release/npm": "^13.1.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@uiw/react-codemirror": "4.25.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "msw": "^1.0.0",
    "prettier": "^2.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.0",
    "react-use": "^17.2.4",
    "semantic-release": "^25.0.1",
    "typescript": "~5.8.0",
    "webpack": "~5.96.0"
  },
  "packageManager": "yarn@4.10.3"
}
